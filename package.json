{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "concurrently \"tailwindcss -o ./app/styles/tailwind.css\" \"postcss styles --base styles --dir app/styles --env production\"",
    "dev": "concurrently \"npm run dev:localdb\" \"npm run dev:css\" \"npm run dev:netlify\" && localDB/stop.sh",
    "dev:css": "concurrently \"postcss styles --base styles --dir app/styles -w\"",
    "dev:netlify": "cross-env NODE_ENV=development netlify dev",
    "dev:localdb": "localDB/start.sh",
    "postinstall": "remix setup node",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.3.0",
    "@fortawesome/free-regular-svg-icons": "^6.0.0",
    "@fortawesome/free-solid-svg-icons": "^6.0.0",
    "@fortawesome/react-fontawesome": "^0.1.17",
    "@netlify/functions": "^0.10.0",
    "@prisma/client": "^3.9.2",
    "@reach/menu-button": "^0.16.2",
    "@react-spring/web": "^9.4.2",
    "@remix-run/netlify": "^1.1.3",
    "@remix-run/react": "^1.1.3",
    "bcrypt": "^5.0.1",
    "clsx": "^1.1.1",
    "hamburger-react": "^2.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.2.3",
    "tailwind": "^4.0.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.3",
    "@tailwindcss/typography": "^0.5.1",
    "@types/bcrypt": "^5.0.0",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@types/tailwindcss": "^3.0.7",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "autoprefixer": "^10.4.2",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.10.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "postcss": "^8.4.6",
    "postcss-cli": "^9.1.0",
    "prettier": "^2.5.1",
    "prisma": "^3.9.2",
    "tailwindcss": "^3.0.19",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
